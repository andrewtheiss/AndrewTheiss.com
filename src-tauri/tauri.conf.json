{
  "$schema": "https://schema.tauri.app/config/1",
  "package": {
    "productName": "UsageTracker",
    "version": "0.1.0"
  },
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm start",
    "devPath": "http://localhost:3000",
    "distDir": "../build"
  },
  "tauri": {
    "bundle": {
      "identifier": "com.andrewtheiss.usage",
      "active": true
    },
    "windows": [
      {
        "title": "Usage Tracker",
        "resizable": true,
        "fullscreen": false,
        "width": 1200,
        "height": 800
      }
    ],
    "security": {
      "csp": null
    },
    "allowlist": {
      "all": false,
      "shell": {
        "all": true
      },
      "dialog": {
        "all": true
      }
    }
  }
}