{
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/node_modules/**"
    ],
    "cleanUrls": true,
    "rewrites": [
      {
        "source": "/desktop-auth",
        "destination": "/desktop-auth.html"
      },
      {
        "source": "/desktop-auth/**",
        "destination": "/desktop-auth.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}